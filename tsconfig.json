{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "noImplicitThis": true
  },
  "include": [
    "livechats/src/**/*.ts",
    "livechats/src/**/*.d.ts",
    "livechats/src/**/*.tsx",
    "livechats/src/**/*.vue"
  ]
}
